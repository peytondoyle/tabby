# Copy this file to .env.local and replace with your actual values
# NEVER commit your real .env.local file to version control!

# === Supabase Configuration ===
# Get these from https://supabase.com/dashboard/project/[PROJECT_ID]/settings/api
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SECRET_KEY=your-service-role-key-here
SUPABASE_PROJECT_REF=your-project-ref

# === API Configuration ===
VITE_API_BASE=http://127.0.0.1:3000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# === Feature Flags ===
# Production mode switches (set to 1 in production)
REQUIRE_SUPABASE_PERSIST=0
REQUIRE_REAL_OCR=0

# Client-side fallbacks (set to 0 in production)
VITE_ALLOW_LOCAL_FALLBACK=1
VITE_ALLOW_DEV_FALLBACK=1

# === Development Tools ===
VITE_SHOW_DEV_BANNER=1
VITE_LOG_API_ERRORS=1

# === OCR Services (optional) ===
# GOOGLE_VISION_API_KEY=your-key-here
# AWS_TEXTRACT_ENABLED=true
# OCR_ENABLED=true